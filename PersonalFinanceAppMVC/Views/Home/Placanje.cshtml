        // Count the number of rows (transactions)
        var rowCount = tbody.getElementsByTagName('tr').length;

        // Calculate the sum of transaction amounts
        var totalAmount = 0;
        var rows = tbody.getElementsByTagName('tr');
        for (var i = 0; i < rows.length; i++) {
            var amountCell = rows[i].getElementsByTagName('td')[3]; 
            totalAmount += parseFloat(amountCell.textContent);
        }

        
        document.getElementById('totalAmount').textContent = totalAmount.toFixed(2);
        document.getElementById('totalCount').textContent = rowCount;
